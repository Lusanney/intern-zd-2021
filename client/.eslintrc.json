{
  "env": {
    "browser": true,
    "es2021": true,
    "jest/global": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "jsx-a11y/label-has-associated-control": "off",
    "import/prefer-default-export": "off",
    "object-curly-newline": "off",
    "react/prop-types": "off",
    "no-plusplus": "off",
    "no-continue": "off"
  }
}
